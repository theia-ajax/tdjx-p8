function make_spring(x,y)
	local e=make_enviro_ent({
		name="spring_"..tostr(x)
			.."_"..tostr(y),
		x=x,y=y,
		w=1,
		on_trigger=spring_trigger,
	})
	
	set_anim(e,{32})
